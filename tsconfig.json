{
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": ".",
    "outDir": "dist/",
    "baseUrl": "./server/",
    "target": "es2018",
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "esnext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "typeRoots": [
      "./server/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
